<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <distance name="colorPrimary">@color/primary</distance>
        <distance name="colorPrimaryDark">@color/primary_dark</distance>
        <distance name="colorAccent">@color/accent</distance>
    </style>

    <style name="AppTheme.NoActionBar">
        <distance name="windowActionBar">false</distance>
        <distance name="windowNoTitle">true</distance>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
