<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_padding"
    app:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/cardview_default_cardCornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="#009688">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/img_cover"
            android:padding="@dimen/card_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/tower_clock" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/card_padding"
            android:weightSum="1">

            <TextView
                android:id="@+id/titulo_ruta"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Los Esclavos"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_descripcion"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="La ruta de los esclavos es un  homenaje a la memoria de la raza negra..."
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>