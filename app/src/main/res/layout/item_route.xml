<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_margin"
    android:layout_marginRight="@dimen/recycler_margin"
    android:layout_marginTop="@dimen/recycler_margin"
    app:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/cardview_default_cardCornerRadius">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/item_route_img_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/img_cover"
            android:scaleType="fitXY"
            android:src="@mipmap/torre_del_reloj_portada" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:background="#FF0080"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            
            android:layout_alignRight="@+id/titulo_ruta"
            android:layout_alignEnd="@+id/titulo_ruta">

        </LinearLayout>

        <TextView
            android:id="@+id/titulo_ruta"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_gravity="bottom"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:text="Los Esclavos"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold" />


    </RelativeLayout>
</android.support.v7.widget.CardView>