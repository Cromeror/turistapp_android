<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recycler_margin"
    android:layout_marginRight="@dimen/recycler_margin"
    android:layout_marginTop="@dimen/recycler_margin"
    app:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/cardview_default_cardCornerRadius">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/item_audioguide_list_img_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:contentDescription="@string/img_cover"
            android:scaleType="fitXY"
            android:src="@mipmap/plaza_de_los_coches" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:background="#FF0080"
            android:orientation="vertical"
            android:layout_alignRight="@+id/text_title_audioguide"
            android:layout_alignEnd="@+id/text_title_audioguide">

        </LinearLayout>

        <TextView
            android:id="@+id/text_title_audioguide"
            android:layout_width="177dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Los Esclavos"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/linearLayout" />

        <TextView
            android:id="@+id/text_subtitle_audioguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="8dp"
            android:textColor="#ffffff"
            android:text="Info general"
            android:layout_below="@+id/text_title_audioguide"
            android:layout_alignLeft="@+id/text_title_audioguide"
            android:layout_alignStart="@+id/text_title_audioguide" />

        <ImageView
            android:id="@+id/btn_more_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/gratis" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

