<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Derechos reservados Blastic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearabout"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Desarrollado por:" />

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/logoblastic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Producto" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="152dp"
            android:layout_height="88dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/logo_turistory" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Patrocinadores:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_gravity="center_vertical"
            android:columnCount="3"
            android:rowCount="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:tint="#616161"
                android:padding="10dp"
                app:srcCompat="@mipmap/logocorpoturismo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:tint="#616161"
                android:padding="10dp"
                app:srcCompat="@mipmap/logoappsco" />

            <ImageView
                android:id="@+id/imageView4"
                android:padding="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/logotodosporunpais"
                android:tint="#616161" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:tint="#616161"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/logomintic"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageView99" />

            <ImageView
                android:tint="#616161"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/logocolciencia"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView18" />

            <ImageView
                android:tint="#616161"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@mipmap/logocomfenalco"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageView14" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
