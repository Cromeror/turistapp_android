<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/calle" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/image_cover"
        android:layout_toRightOf="@+id/image_cover"
        android:text="Sitio Histórico"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:text="Audioguia: 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/textAudioguía"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_cover"
        android:layout_toEndOf="@+id/image_cover" />

    <TextView
        android:text="GRATIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4caf50"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:id="@+id/textView7"
        android:layout_below="@+id/text_title"
        android:layout_toRightOf="@+id/image_cover"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_cover" />

    <TextView
        android:text="Distancia:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_distance"
        android:textSize="14sp"

        android:layout_above="@+id/textAudioguía"
        android:layout_toRightOf="@+id/image_cover"
        android:layout_toEndOf="@+id/image_cover" />


</RelativeLayout>