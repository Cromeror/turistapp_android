<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/calle" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Calle de las Mercedes"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_toRightOf="@+id/imageView2"
        android:text="4,0"
        android:textColor="@color/primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/estrella1"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Distancia: 1.3 Km"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textAudioguÃ­a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDistancia"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Audioguia: 1"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/estrella2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/estrella1"
        android:layout_toRightOf="@+id/estrella1"
        android:src="@drawable/ic_star_rate"
        android:tint="@color/primary" />

    <ImageView
        android:id="@+id/estrella3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/estrella1"
        android:layout_toRightOf="@+id/estrella2"
        android:src="@drawable/ic_star_rate"
        android:tint="@color/primary" />

    <ImageView
        android:id="@+id/estrella4"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/estrella1"
        android:layout_toRightOf="@+id/estrella3"
        android:src="@drawable/ic_star_rate"
        android:tint="@color/primary" />

    <ImageView
        android:id="@+id/estrella5"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/estrella1"
        android:layout_toRightOf="@+id/estrella4"
        android:src="@drawable/ic_star_rate" />

    <ImageView
        android:id="@+id/estrella1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/textTitle"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:src="@drawable/ic_star_rate"
        android:tint="@color/primary" />
</RelativeLayout>