<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Derechos reservados Blastic"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearabout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Desarrollado por:" />

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/logoblastic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Producto" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="152dp"
            android:layout_height="88dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/logo_naranja" />
        <TextView
            android:id="@+id/textView30"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f57c00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TURISTORY" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Patrocinadores:" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_gravity="center_vertical"
            android:columnCount="3"
            android:rowCount="1">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:tint="#616161"
                app:srcCompat="@mipmap/logocorpoturismo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:tint="#616161"
                app:srcCompat="@mipmap/logoappsco" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/logotodosporunpais"
                android:tint="#616161" />

        </GridLayout>


                <GridLayout
                    android:columnCount="3"
                    android:rowCount="1"

                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_gravity="center_vertical">


                    <ImageView
                        android:tint="#616161"
                        android:layout_width="117dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/logocolciencia"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView18" />

                    <ImageView
                        android:tint="#616161"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/logomintic"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView99" />

                    <ImageView
                        android:tint="#616161"
                        android:layout_width="115dp"
                        android:layout_height="67dp"
                        app:srcCompat="@mipmap/logocomfenalco"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView14" />
                </GridLayout>


    </LinearLayout>
</RelativeLayout>
