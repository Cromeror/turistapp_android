<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_mediaplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/initial_time"
        android:layout_alignStart="@+id/initial_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Name audio"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="05:00" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_mediaplayer"
        android:layout_toEndOf="@+id/initial_time"
        android:layout_toLeftOf="@+id/end_time"
        android:layout_toRightOf="@+id/initial_time"
        android:layout_toStartOf="@id/end_time" />

    <TextView
        android:id="@+id/initial_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/seekBar"
        android:text="00:00" />
</RelativeLayout>